{
    "manifest_version": 2,
    "name": "Mozzi",
    "version": "1.0.0",
    
    "description": "Converts speech to text and use the text converted to search through an online search engine.",
    
    "icons": {
      "256": "firefox-icon-256.png"
    },

    "permissions": [
      "activeTab"
    ],

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./src/mozzi.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"]
    }    
  }
  